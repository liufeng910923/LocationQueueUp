<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/fp_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/top_bar_background"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/fp_reback_btn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_btn_back"
            android:onClick="btn_back"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="重置密码"
            android:textColor="#ffffff"
            android:textSize="20sp" />

     <!--    <Button
            android:id="@+id/fp_right_btn"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/title_btn_right"
            android:onClick="btn_right"
            android:text="提交"
            android:textColor="#fff" /> -->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/fp_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/ic_preference_first_normal"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/fp_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="手机号码:"
                android:textColor="#000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_fp_phone1"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dip"
                android:background="#EDEDED"
                android:editable="false"
                android:gravity="right"
                android:ems="10"
                android:hint="请输入注册号码"
                android:phoneNumber="true"
                android:paddingRight="5dip"
                android:paddingTop="5dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/fp_mailerror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/nullerror"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fp_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_preference_normal"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_fp_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/passworderror"
                android:padding="8dp"
                android:text="新  密  码:"
                android:textColor="#000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_fp_password1"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dip"
                android:background="#EDEDED"
                android:ems="10"
                android:gravity="right"
                android:hint="请输入新密码"
                android:paddingRight="5dip"
                android:paddingTop="5dip"
                android:password="true"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/fp_passworderror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dip"
                android:src="@drawable/nullerror"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fp_confirmpwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_preference_last_normal"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_fp_confirmpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/fp_confirmpwderror"
                android:padding="8dp"
                android:text="确认新密码:"
                android:textColor="#000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_fp_confirmpwd"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dip"
                android:background="#EDEDED"
                android:ems="10"
                android:gravity="right"
                android:hint="请重新输入密码"
                android:paddingRight="5dip"
                android:paddingTop="5dip"
                android:password="true"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/fp_confirmpwderror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/nullerror"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
    <Button
            android:id="@+id/fp_right_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/button_selectot_corners_shadow"
            android:onClick="btn_right"
            android:text="提交"
            android:textColor="#fff" />
</LinearLayout>